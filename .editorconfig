;
; This is an ini style configuration. See http://editorconfig.org/ for more information on this file.
;
;
; Top level editor config.
root = true
; Always use Unix style new lines with new line ending on every file and trim whitespace
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
;
; Python: PEP8 defines 4 spaces for indentation
[*.py]
indent_style = space
indent_size = 4
;
[*.js]
indent_style = space
indent_size = 4
;
[*.sass, *.css]
indent_style = space
indent_size = 4
;
; YAML, JSON
[*.yaml, *.yml, *.json]
indent_style = space
indent_size = 2
;
[*.md]
trim_trailing_whitespace = false
